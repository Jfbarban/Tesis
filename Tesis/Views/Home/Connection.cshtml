

@{
    ViewData["Title"] = "NextCloudConection";
}

<head>
    <link rel="stylesheet" href="~/css/ConectionStile.css" />
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/ConectionJScript.js" type="text/javascript"></script>
    <title>NextCloudConection</title>
</head>

<body>

    <header>
        <h1>Web NextCloud Configuración</h1>
    </header>

    <form id="formGroup" class="formGroup" method="post">
        <div>

            <div class="form-group">
                <label for="url">URL</label>
                <input type="text" class="form-control" id="url" name="url" />
            </div>
            <div class="form-group">
                <label for="user">Username</label>
                <input type="text" class="form-control" id="user" name="user" />
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" id="password" name="password" />
            </div>
            <div class="form-group">
                <label for="netProxy">Use Proxy</label>
                <select class="form-control" id="netProxy" name="netProxy">
                    <option value="No">No admite proxy</option>
                    <option value="Si">Si admite proxy</option>
                </select>
            </div>
            <section id="proxySettings" class="proxySettings" style="display:none">
                <div class="form-group">
                    <label for="proxyIP">Proxy IP</label>
                    <input type="text" class="form-control" id="proxyIP" name="proxyIP" />
                </div>
                <div class="form-group">
                    <label for="proxyPort">Proxy Port</label>
                    <input type="text" class="form-control" id="proxyPort" name="proxyPort" />
                </div>
                <div class="form-group">
                    <label for="userProxy">Proxy Username</label>
                    <input type="text" class="form-control" id="userProxy" name="userProxy" />
                </div>
                <div class="form-group">
                    <label for="passProxy">Proxy Password</label>
                    <input type="password" class="form-control" id="passProxy" name="passProxy" />
                </div>

            </section>

            <button type="submit" id="submitBTN" class="btn btn-primary">Guardar</button>

        </div>

    </form>

</body>